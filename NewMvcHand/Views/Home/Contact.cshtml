
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inner-banner has-base-color-overlay text-center" style="background: url(/Content/site/images/background/1.jpg);">
    <div class="container">
        <div class="box">
            <h3>Əlaqə</h3>
        </div><!-- /.box -->
    </div><!-- /.container -->
</div>
<div class="breadcumb-wrapper">
    <div class="container">
        <div class="pull-left">
            <ul class="list-inline link-list">
                <li>
                    <a href="@Url.Action("","")">Baş Səyfə</a>
                </li>
                <!-- comment for inline hack
                -->
                <li>
                    Əlaqə
                </li>
            </ul><!-- /.list-line -->
        </div><!-- /.pull-left -->
    </div><!-- /.container -->
</div>
<section class="contact_us">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="sec-title">
                    <h2>Bizə Yazın</h2>
                </div>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="default-form-area">
                        <form id="contact-form" name="contact_form" class="default-form" novalidate="novalidate">
                            <div class="row clearfix">
                                <div class="col-md-6 col-sm-6 col-xs-12">

                                    <div class="form-group">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "reguired", @name = "form_name", @placeholder = "Your Name *" } })
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">

                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control required email", @maxlength = "100", @required = "reguired", @name = "form_email", @placeholder = "Your Mail *" } })

                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "reguired", @name = "form_phone", @placeholder = "Phone" } })
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "reguired", @placeholder = "Subject", @name = "form_subject" } })

                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">

                                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control textarea required", @maxlength = "150", @required = "reguired", @name = "form_message", @placeholder = "Your Message...." } })

                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <input id="form_botcheck" name="form_botcheck" class="form-co

                                   ntrol" type="hidden" value="">
                                        <input class="btn-style-one" type="submit" data-loading-text="Please wait..." value="Göndər">
                                    </div>
                                </div>

                            </div>

                    </div>
                }
            </div>

            <div class="col-md-4 col-sm-8 col-xs-12">
                <div class="sec-title">
                    <h2>Əlaqə Məlumatları</h2>
                </div>

                <br>
                <div class="default-cinfo">

                    <div class="acc-content collapsed">
                        <ul class="contact-infos">
                            <li>
                                <div class="icon_box">
                                    <i class="fa fa-map-marker"></i>
                                </div><!-- /.icon-box -->
                                <div class="text-box">
                                    <p><b>Address:</b> <br> 28 May Mirali Qashqay, Bakı, Azərbaycan.</p>
                                </div><!-- /.text-box -->
                            </li>
                            <li>
                                <div class="icon_box">
                                    <i class="fa fa-phone"></i>
                                </div><!-- /.icon-box -->
                                <div class="text-box">
                                    <p><b>Tel :</b> <br> +994-70-203-20-09</p>
                                </div><!-- /.text-box -->
                            </li>
                            <li>
                                <div class="icon_box">
                                    <i class="fa fa-envelope"></i>
                                </div><!-- /.icon-box -->
                                <div class="text-box">
                                    <p><b>Email:</b> <br> xngroups@gmail.com</p>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

