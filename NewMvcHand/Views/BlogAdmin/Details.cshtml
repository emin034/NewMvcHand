@model NewMvcHand.Models.Gallery
<div class="modal-header" style="background-color:#00BCD4 ;color:white">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2 class="modal-title" style="text-align: center">@Model.Name</h2>
</div>
<div class="modal-body">
    <table class="table table-bordered">
        <tr>
            <td>Məhsulun Şəkli</td>
            <td>
                <img src="@Model.İmage" />
            </td>
        </tr>
        <tr>
            <td>Məhsul Haqqında</td>
            <td>
                @Model.About
            </td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="material-icons">power_settings_new</i> Bağla</button>
</div>




